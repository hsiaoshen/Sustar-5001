<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../answer/answer.css">
    <link rel="stylesheet" type="text/css" href="../question/css1/bootstrap-grid.min.css">
  	<link rel="stylesheet" type="text/css" href="../question/css1/htmleaf-demo.css">
    <link rel="stylesheet" type="text/css" href="../question/css1/tag.css">
  	<link href="../question/css1/themes/quill.snow.css" rel="stylesheet">
  	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.6.0/katex.min.css"/>
  	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.3.0/styles/monokai-sublime.min.css"/>
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  	<script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
  	<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>回答页</title>
  </head>
  <body>
    <% include header %>
    <div class="container">
      <div class="col-xs-12 col-md-9">
        <div class="answer-right">
          <div class="answer1">
            <p class="answer-shoucang">
              <button class="answer-shoucang-btn" type="button" name="button">收藏</button>
            </p>
            <h2><span class = "wen">问</span><%= data.title %></h2>
            <div class = "answer-content">
              <p class="answer-code"><%= data.code %></p>
            </div>
            <div class="answer-biaoqian">
              关键字:<span class="answer-biaoqian-span">
                <a class = "answer-biaoqian-a" href="#"><%= data.tags[0] %></a>
              </span>
            </div>
          </div>
          <!-- 提问者 -->
          <div class="answer2">
            <div class="answer-people">
              <img class="answer-people-img" src="" alt="">
              <span class="answer-people-span">
                <a class="answer-people-a" href="#"><%= data.personuid %></a>
              </span>
            </div>
          </div>
          <!-- 插入回复 -->
          <div class = "answer-huifu">
            <div class="answer-people2">
              <img class="answer-people-img" src="" alt="">
              <span class="answer-people-span">
                <a class="answer-people-a" href="#">回答者(插入user)</a>
              </span>
            </div>
            <div class = "answer-content">
              <p>(插入回复内容)</p>
            </div>
            <button class="answer-zan-btn" type="button" name="button">点赞</button>
            <button class="answer-caina-btn" type="button" name="button">采纳</button>
          </div>

          <!-- 文本编辑器 -->
          <div class = "answer-text">
            <div class="row">
      				<!-- 文本编辑器 -->
      				<div class="col-md-12 mt50">
      					<div id="standalone-container">
      					<div id="toolbar-container">
      					<span class="ql-formats">
      					<select class="ql-font"></select>
      					<select class="ql-size"></select>
      					</span>
      					<span class="ql-formats">
      					<button class="ql-bold"></button>
      					<button class="ql-italic"></button>
      					<button class="ql-underline"></button>
      					<button class="ql-strike"></button>
      					</span>
      					<span class="ql-formats">
      					<select class="ql-color"></select>
      					<select class="ql-background"></select>
      					</span>
      					<span class="ql-formats">
      					<button class="ql-script" value="sub"></button>
      					<button class="ql-script" value="super"></button>
      					</span>
      					<span class="ql-formats">
      					<button class="ql-header" value="1"></button>
      					<button class="ql-header" value="2"></button>
      					<button class="ql-blockquote"></button>
      					<button class="ql-code-block"></button>
      					</span>
      					<span class="ql-formats">
      					<button class="ql-list" value="ordered"></button>
      					<button class="ql-list" value="bullet"></button>
      					<button class="ql-indent" value="-1"></button>
      					<button class="ql-indent" value="+1"></button>
      					</span>
      					<span class="ql-formats">
      					<button class="ql-direction" value="rtl"></button>
      					<select class="ql-align"></select>
      					</span>
      					<span class="ql-formats">
      					<button class="ql-link"></button>
      					<button class="ql-image"></button>
      					<button class="ql-video"></button>
      					<button class="ql-formula"></button>
      					</span>
      					<span class="ql-formats">
      					<button class="ql-clean"></button>
      					</span>
      					</div>
      					<!-- 发布内容框 -->
      					<div id="editor-container"></div>
      					<div class="checkbox">
      						<!-- <label class="label">
      							<input type="checkbox" id="blankCheckbox" value="option1" aria-label="...">是否发出悬赏
      						</label> -->
      					</div>
      					<div></div>
      					<!-- 发布按钮 -->
      					<button type="submit" class="answer-btn btn btn-default">发布问题</button>

      					</div>
      				</div>
      			</div>

         <!-- 00000000000000000000000000000000000000000000000000000000 -->
          </div>
        </div>
      </div>
    </div>
    <% include foot %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.6.0/katex.min.js"></script>
  	<script  src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.3.0/highlight.min.js"></script>
  	<script src="../question/dist/quill.js"></script>
    <script type="text/javascript">
    $(document).ready(function() {
      // var data = "<%= data.code %>";
      // console.log(data);
      // if (data) {
      //   $("./answer-code").append(data);
      // }
      var quill = new Quill('#editor-container', {
          modules: {
            formula: true,
            syntax: true,
            toolbar: '#toolbar-container'
          },
          placeholder: 'Compose an epic...',
          theme: 'snow'
        });
      });
    </script>
  </body>
</html>
